<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FEDC">

    <TextView
        android:id="@+id/textViewP2Info"
        android:layout_width="218dp"
        android:layout_height="192dp"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833" />

    <TextView
        android:id="@+id/textViewP1Info"
        android:layout_width="218dp"
        android:layout_height="192dp"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.189" />

    <TextView
        android:id="@+id/textViewP2"
        android:layout_width="103dp"
        android:layout_height="47dp"
        android:text="P2"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54" />

    <RadioGroup
        android:id="@+id/RadioGroupP1"
        android:layout_width="133dp"
        android:layout_height="207dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181">

        <RadioButton
            android:id="@+id/humansP1"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_gravity="top|left"
            android:shadowColor="#FF9800"
            android:text="Люди" />

        <RadioButton
            android:id="@+id/robotsP1"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_gravity="top|left"
            android:gravity="center_vertical"
            android:shadowColor="#FF9800"
            android:text="Роботы" />

        <RadioButton
            android:id="@+id/plantsP1"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:shadowColor="#FF9800"
            android:text="Растения" />

        <RadioButton
            android:id="@+id/higherbeingsP1"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:shadowColor="#FF9800"
            android:text="Высшие существа" />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewP1"
        android:layout_width="103dp"
        android:layout_height="47dp"
        android:text="P1"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <RadioGroup
        android:id="@+id/RadioGroupP2"
        android:layout_width="133dp"
        android:layout_height="207dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.843">

        <RadioButton
            android:id="@+id/humansP2"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:shadowColor="#FF9800"
            android:text="Люди" />

        <RadioButton
            android:id="@+id/robotsP2"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:shadowColor="#FF9800"
            android:text="Роботы" />

        <RadioButton
            android:id="@+id/plantsP2"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:shadowColor="#FF9800"
            android:text="Растения" />

        <RadioButton
            android:id="@+id/higherbeingsP2"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:shadowColor="#FF9800"
            android:text="Высшие существа" />
    </RadioGroup>

    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFCB63"
        android:text="Старт"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/btnToMenuActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFCB63"
        android:text="Назад"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

</androidx.constraintlayout.widget.ConstraintLayout>